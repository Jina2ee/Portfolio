{
  "name": "portfolio_0.1",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "web:dev": "nodemon ./index.js",
    "tailwind": "tailwindcss -i ./src/styles/main.css -o ./public/tailwind.css",
    "tailwind:watch": "tailwindcss -i ./src/styles/main.css -o ./public/tailwind.css --watch",
    "dev": "concurrently \"yarn web:dev\" \"yarn tailwind:watch\"",
    "build": "concurrently \"yarn tailwind\" \"yarn pm2 start index.js\""
  },
  "dependencies": {
    "pug": "^3.0.2"
  }
}
